@using MessageBusSample.Client.Components.Actions.Rename
@using MessageBusSample.Client.Services
@inject EntityService EntityService

<GenericList GetItems="GetCurrent" Title="Current">
    <ListItemContent>
        <GenericListItem Entity="context">
            <MenuContent>
                <MudMenuItem>Edit</MudMenuItem>
                <MudMenuItem>View</MudMenuItem>
                <RenameAction EntityId="@context.Id" />
            </MenuContent>
        </GenericListItem>
    </ListItemContent>
</GenericList>

@code {
    Func<List<Entity>> GetCurrent => () => EntityService.GetCurrent;
}
